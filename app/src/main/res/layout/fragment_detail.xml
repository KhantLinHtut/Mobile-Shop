<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.DetailFragment"
    >

    <androidx.cardview.widget.CardView
        android:elevation="16dp"
        app:cardCornerRadius="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/white5">

            <ImageView
                android:id="@+id/img_phone"
                android:layout_width="280dp"
                android:layout_height="230dp"
                android:background="@drawable/googlepixel4detail"
                android:scaleType="fitCenter"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                />

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textStyle="bold"
                android:layout_marginTop="30dp"
                app:layout_constraintHorizontal_bias="0.32"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/img_phone"
                app:layout_constraintLeft_toLeftOf="parent"
                />

            <TextView
                android:id="@+id/txt_nameDisplay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Display"
                android:textStyle="bold"
                android:layout_marginTop="30dp"
                app:layout_constraintHorizontal_bias="0.68"
                app:layout_constraintTop_toBottomOf="@id/img_phone"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <TextView
                android:id="@+id/txt_screen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Screen"
                android:textStyle="bold"
                android:layout_margin="20dp"
                app:layout_constraintHorizontal_bias="0.3"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_name"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <TextView
                android:id="@+id/txt_screenDisplay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Display"
                android:textStyle="bold"
                android:layout_margin="20dp"
                app:layout_constraintHorizontal_bias="0.7"
                app:layout_constraintTop_toBottomOf="@id/txt_nameDisplay"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <TextView
                android:id="@+id/txt_platform"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Platform"
                android:textStyle="bold"
                android:layout_margin="20dp"
                app:layout_constraintHorizontal_bias="0.3"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_screen"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <TextView
                android:id="@+id/txt_platformDisplay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Display"
                android:textStyle="bold"
                android:layout_margin="20dp"
                app:layout_constraintHorizontal_bias="0.7"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_screenDisplay"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <TextView
                android:id="@+id/txt_memory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Memory"
                android:textStyle="bold"
                android:layout_margin="20dp"
                app:layout_constraintHorizontal_bias="0.3"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_platform"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <TextView
                android:id="@+id/txt_memoryDisplay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Display"
                android:textStyle="bold"
                android:layout_margin="20dp"
                app:layout_constraintHorizontal_bias="0.7"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_platformDisplay"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <TextView
                android:id="@+id/txt_processor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Processor"
                android:textStyle="bold"
                android:layout_margin="20dp"
                app:layout_constraintHorizontal_bias="0.3"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_memory"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <TextView
                android:id="@+id/txt_processorDisplay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Display"
                android:textStyle="bold"
                android:layout_margin="20dp"
                app:layout_constraintHorizontal_bias="0.7"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_memoryDisplay"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <TextView
                android:id="@+id/txt_camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Camera"
                android:textStyle="bold"
                android:layout_margin="20dp"
                app:layout_constraintHorizontal_bias="0.3"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_processor"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <TextView
                android:id="@+id/txt_cameraDisplay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Display"
                android:textStyle="bold"
                android:layout_margin="20dp"
                app:layout_constraintHorizontal_bias="0.7"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_processorDisplay"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <TextView
                android:id="@+id/txt_selfie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selfie Camera"
                android:textStyle="bold"
                android:layout_margin="20dp"
                app:layout_constraintHorizontal_bias="0.3"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_camera"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <TextView
                android:id="@+id/txt_selfieDisplay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Display"
                android:textStyle="bold"
                android:layout_margin="20dp"
                app:layout_constraintHorizontal_bias="0.7"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_cameraDisplay"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <TextView
                android:id="@+id/battery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Battery"
                android:textStyle="bold"
                android:layout_margin="20dp"
                app:layout_constraintHorizontal_bias="0.3"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_selfie"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <TextView
                android:id="@+id/batteryDisplay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Display"
                android:textStyle="bold"
                android:layout_margin="20dp"
                app:layout_constraintHorizontal_bias="0.7"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_selfieDisplay"
                app:layout_constraintLeft_toLeftOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>